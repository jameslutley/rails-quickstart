<div class="flex justify-center">
  <div class="w-full max-w-sm">
    <div class="bg-white shadow-lg rounded-lg pt-12 px-8 pb-8 mb-8">
      <h1 class="font-semibold text-2xl leading-none mb-6 text-center">Sign Up</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="mb-6">
          <%= f.label :name, class: "c-form__label" %>
          <%= f.text_field :name, autofocus: true, class: "c-form__field", placeholder: "Full Name" %>
        </div>

        <div class="mb-6">
          <%= f.label :email, class: "c-form__label" %>
          <%= f.email_field :email, autofocus: false, class: "c-form__field", placeholder: "Email Address" %>
        </div>

        <div class="mb-6">
          <%= f.label :password, class: "c-form__label" %>
          <%= f.password_field :password, autocomplete: "off", class: "c-form__field", placeholder: "Password" %>
        </div>

        <div class="mb-6">
          <%= f.label :password_confirmation, class: "c-form__label" %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "c-form__field", placeholder: "Confirm Password" %>
        </div>

        <div class="pt-2">
          <%= f.submit "Sign up", class: "c-btn c-btn--blue w-full" %>
        </div>
      <% end %>
    </div>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
