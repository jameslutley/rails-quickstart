<%- if controller_name != 'sessions' %>
  <p class="text-grey-dark mb-4">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-grey-dark mb-4">Don&rsquo;t have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="mb-4"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="mb-4"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="mb-4"><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p class="mb-4"><%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "font-semibold text-blue no-underline hover:text-blue-dark hover:underline" %></p>
  <% end -%>
<% end -%>
